#Program to play tunes on the computer keyboard
#By Harshitha.B
import getch                                                   #importing the getch() library which is installed in the path of python3
import os                                                     #allows us to interface with underlying operating system that python is runningon
print ("a=440 s=493 d=523 f=587 g=659 h=698 j=783")            #frequencies in Hz
print ("w=880 e=987 r=1046 t=1174 y=1174 u=1318 i=1396")       #frequencies in Hz
print ("z=1760 x=1975 c=2093 v=2349 b=2637 n=2793 m=3135")     #frequencies in Hz
print ("To play keep pressing any of these keys: a s d f g h j q w e r t y u z x c v b n m")#displaying keys which can be used to play
print ("press escape to exit")                                 #displaying the key which is used to exit
note=getch.getche()                                            #reading a character from the keyboard
while True:                                                    #running a continuous loop until esc is pressed
    if note=='a':                                              #check if the character is "a"
        os.system("aplay /home/harshitha/Documents/notea.wav") #if yes play the corresponding note
    elif note=='s':                                            #check if the character is "s"
        os.system("aplay /home/harshitha/Documents/noteb.wav") #if yes play the corresponding note
    elif note=='d':                                            #check if the character is "d"
        os.system("aplay /home/harshitha/Documents/notec.wav") #if yes play the corresponding note
    elif note=='f':                                            #check if the character is "  f"
        os.system("aplay /home/harshitha/Documents/noted.wav") #if yes play the corresponding note
    elif note=='g':                                            #check if the character is "g"
        os.system("aplay /home/harshitha/Documents/notee.wav") #if yes play the corresponding note
    elif note=='h':                                            #check if the character is "h"
        os.system("aplay /home/harshitha/Documents/notef.wav") #if yes play the corresponding note
    elif note=='j':                                            #check if the character is "j"
        os.system("aplay /home/harshitha/Documents/noteg.wav") #if yes play the corresponding note
    elif note=='q':                                            #check if the character is "q"
        os.system("aplay /home/harshitha/Documents/notea1.wav")#if yes play the corresponding note
    elif note=='w':                                            #check if the character is "w"
        os.system("aplay /home/harshitha/Documents/noteb1.wav")#if yes play the corresponding note
    elif note=='e':                                            #check if the character is "e"
        os.system("aplay /home/harshitha/Documents/notec1.wav")#if yes play the corresponding note
    elif note=='r':                                            #check if the character is "r"
        os.system("aplay /home/harshitha/Documents/noted1.wav")#if yes play the corresponding note
    elif note=='t':                                            #check if the character is "t"
        os.system("aplay /home/harshitha/Documents/notee1.wav")#if yes play the corresponding note
    elif note=='y':                                            #check if the character is "y"
        os.system("aplay /home/harshitha/Documents/notef1.wav")#if yes play the corresponding note
    elif note=='u':                                            #check if the character is "u"
        os.system("aplay /home/harshitha/Documents/noteg1.wav")#if yes play the corresponding note
    elif note=='z':                                            #check if the character is "z"
        os.system("aplay /home/harshitha/Documents/notea2.wav")#if yes play the corresponding note
    elif note=='x':                                            #check if the character is "x"
        os.system("aplay /home/harshitha/Documents/noteb2.wav")#if yes play the corresponding note
    elif note=='c':                                            #check if the character is "c"
        os.system("aplay /home/harshitha/Documents/notec2.wav")#if yes play the corresponding note
    elif note=='v':                                            #check if the character is "v"
        os.system("aplay /home/harshitha/Documents/noted2.wav")#if yes play the corresponding note
    elif note=='b':                                            #check if the character is "b"
        os.system("aplay /home/harshitha/Documents/notee2.wav")#if yes play the corresponding note
    elif note=='n':                                            #check if the character is "n"
        os.system("aplay /home/harshitha/Documents/notef2.wav")#if yes play the corresponding note
    elif note=='m':                                            #check if the character is "m"
        os.system("aplay /home/harshitha/Documents/noteg2.wav")#if yes play the corresponding note
    elif note== chr(27):                                       #check if it is escape                                       
        break                                                  #if yes exit from the program
    note=getch.getche()                                        #read the next character
        
       
